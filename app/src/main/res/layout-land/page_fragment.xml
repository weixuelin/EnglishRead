<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_4"
            android:paddingRight="@dimen/dp_4"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvIndexInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_kuang"
                android:clickable="true"
                android:paddingLeft="@dimen/dp_8"
                android:paddingTop="@dimen/dp_2"
                android:paddingRight="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_2"
                android:text="本赛季信息"
                android:textColor="@color/write"
                android:textSize="14sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_1"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imagePaiMing"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@drawable/zs_pic" />

            <TextView
                android:id="@+id/tvUserLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:text="璀璨砖石"
                android:textColor="@color/blue_login"
                android:textSize="@dimen/sp_8" />

            <TextView
                android:id="@+id/tvLevelFen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="[3]"
                android:textColor="@color/orange"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 单词基础-->
            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/write_kuang"
                android:orientation="vertical"
                android:padding="@dimen/dp_6">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_12"
                        android:layout_height="@dimen/dp_12"
                        android:src="@drawable/dcjc_pic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:text="单词基础"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_10" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="当前课程:"
                        android:textSize="@dimen/sp_8" />

                    <TextView
                        android:id="@+id/tvBookName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:textColor="@color/green"
                        android:textSize="@dimen/sp_8" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvUnitName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_8" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="[正在学习]"
                        android:visibility="gone"
                        android:textColor="@color/black1"
                        android:textSize="@dimen/sp_8" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvUnitWord"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_8" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="[完成记忆]"
                        android:visibility="gone"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/sp_8" />

                </LinearLayout>

                <Button
                    android:id="@+id/buttonContinue"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="@drawable/blue_kuang_yuan"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_4"
                    android:text="继续学习"
                    android:textColor="@color/write"
                    android:textSize="@dimen/sp_8" />

            </LinearLayout>

            <!-- 词性分布图-->
            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_marginLeft="@dimen/dp_4"
                android:background="@drawable/write_kuang"
                android:orientation="vertical"
                android:padding="@dimen/dp_6">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_12"
                        android:layout_height="@dimen/dp_12"
                        android:src="@drawable/cxfb_pic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:text="词性分布图"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_10" />

                </LinearLayout>

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/cxPieChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />

            </LinearLayout>

            <!-- 解锁挑战-->
            <LinearLayout
                android:id="@+id/linear3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_marginLeft="@dimen/dp_4"
                android:background="@drawable/red_kuang"
                android:orientation="vertical"
                android:padding="@dimen/dp_6">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="单词基础"
                        android:textColor="@color/write"
                        android:textSize="@dimen/sp_10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:background="@drawable/text_kuang1"
                        android:paddingLeft="@dimen/dp_8"
                        android:paddingTop="@dimen/dp_2"
                        android:paddingRight="@dimen/dp_8"
                        android:paddingBottom="@dimen/dp_2"
                        android:text="挑战"
                        android:textColor="@color/write1"
                        android:textSize="@dimen/sp_8" />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <com.github.mikephil.charting.charts.LineChart
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_60"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_4" />

                    <ImageView
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_gravity="center"
                        android:src="@drawable/lock_pic" />

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="欢迎来到专题魔方"
                    android:layout_marginTop="@dimen/dp_8"
                    android:textColor="@color/write"
                    android:textSize="@dimen/sp_8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="解锁更多专题搜集更多徽章"
                    android:textColor="@color/write"
                    android:textSize="@dimen/sp_8" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 学习-->
            <LinearLayout
                android:id="@+id/linear4"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_160"
                android:layout_span="2"
                android:background="@drawable/write_kuang"
                android:orientation="vertical"
                android:padding="@dimen/dp_6">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_4">

                    <ImageView
                        android:layout_width="@dimen/dp_12"
                        android:layout_height="@dimen/dp_12"
                        android:src="@drawable/study_pic" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:layout_weight="1"
                        android:text="学习"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_10" />

                    <ImageView
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_10"
                        android:src="@drawable/right" />

                </LinearLayout>

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/studyLineChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_4">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/fuxi_pic"
                        android:drawablePadding="@dimen/dp_4"
                        android:text="复习"
                        android:textSize="@dimen/sp_9" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ting_pic"
                        android:drawablePadding="@dimen/dp_4"
                        android:text="听写"
                        android:textSize="@dimen/sp_9" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/test_pic"
                        android:drawablePadding="@dimen/dp_4"
                        android:text="单元测试"
                        android:textSize="@dimen/sp_9" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/tx_pic"
                        android:drawablePadding="@dimen/dp_4"
                        android:text="听写训练"
                        android:textSize="@dimen/sp_9" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/study1"
                        android:drawablePadding="@dimen/dp_4"
                        android:text="单次学习"
                        android:textSize="@dimen/sp_9" />


                </LinearLayout>


            </LinearLayout>

            <!-- 时间，进度-->
            <LinearLayout
                android:id="@+id/linear5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/timeIndexLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/write_kuang"
                    android:padding="@dimen/dp_4">

                    <TextView
                        android:id="@+id/tvIndexTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_8" />

                    <TextView
                        android:id="@+id/tvIndexWeek"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/black1"
                        android:textSize="@dimen/sp_8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text="欢迎来到恋词英语学习平台"
                        android:textColor="@color/black1"
                        android:textSize="@dimen/sp_8" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/progressLatout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:background="@drawable/write_kuang"
                    android:padding="@dimen/dp_4">

                    <TextView
                        android:id="@+id/tvTi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的课本完成情况"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/sp_8" />

                    <FrameLayout
                        android:id="@+id/picFrameLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvTi">

                        <android.support.v7.widget.AppCompatSeekBar
                            android:id="@+id/progressBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_8"
                            android:max="100" />

                        <TextView
                            android:id="@+id/studyTextNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_8"
                            android:text="12%"
                            android:textColor="@color/red"/>

                        <ImageView
                            android:id="@+id/imagePic"
                            android:layout_width="@dimen/dp_14"
                            android:layout_height="@dimen/dp_14"
                            android:visibility="gone"
                            android:src="@drawable/location_icon" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:textSize="@dimen/sp_8" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 转换量趋势-->
            <LinearLayout
                android:id="@+id/linear6"
                style="@style/margin4"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_160"
                android:background="@drawable/write_kuang"
                android:orientation="vertical"
                android:padding="@dimen/dp_6">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_4">

                    <ImageView
                        android:layout_width="@dimen/dp_12"
                        android:layout_height="@dimen/dp_12"
                        android:src="@drawable/zhl_pic" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:layout_weight="1"
                        android:text="转换量趋势"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_10" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_32"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvStudyNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:text="学习量"
                        android:textSize="@dimen/sp_8" />

                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="@dimen/dp_16"
                        android:layout_marginLeft="@dimen/dp_24"
                        android:background="@color/line" />

                    <TextView
                        android:id="@+id/tvFuXiStudyNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_24"
                        android:textColor="@color/blue_login"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:text="需要复习"
                        android:textSize="@dimen/sp_8" />

                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="@dimen/dp_16"
                        android:layout_marginLeft="@dimen/dp_24"
                        android:background="@color/line"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_24"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/sp_12"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:text="熟悉量"
                        android:textSize="@dimen/sp_8"
                        android:visibility="gone" />

                </LinearLayout>

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/zhlBarChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <!-- 攻防战-->
            <LinearLayout
                android:id="@+id/linear7"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_160"
                android:layout_marginTop="@dimen/dp_6"
                android:background="@drawable/write_kuang"
                android:orientation="vertical"
                android:padding="@dimen/dp_6">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_4">

                    <ImageView
                        android:layout_width="@dimen/dp_14"
                        android:layout_height="@dimen/dp_14"
                        android:src="@drawable/gfz_pic" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:layout_weight="1"
                        android:text="攻防战"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/orange_kuang"
                        android:paddingLeft="@dimen/dp_8"
                        android:paddingTop="@dimen/dp_2"
                        android:paddingRight="@dimen/dp_8"
                        android:paddingBottom="@dimen/dp_2"
                        android:text="规则"
                        android:textColor="@color/write1"
                        android:textSize="@dimen/sp_8" />

                </LinearLayout>

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/gfzBarChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="TooManyViews" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--智能测试-->
            <LinearLayout
                android:id="@+id/linear8"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_160"
                android:background="@drawable/write_kuang"
                android:orientation="vertical"
                android:padding="@dimen/dp_6">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_4">

                    <ImageView
                        android:layout_width="@dimen/dp_12"
                        android:layout_height="@dimen/dp_12"
                        android:src="@drawable/study_pic" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:layout_weight="1"
                        android:text="智能测试"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_10" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/testRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <!--成长经历-->
            <LinearLayout
                android:id="@+id/linear9"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_160"
                android:background="@drawable/write_kuang"
                android:orientation="vertical"
                android:padding="@dimen/dp_6">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/czRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
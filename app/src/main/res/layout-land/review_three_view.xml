<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dp_6">

    <LinearLayout
        style="@style/margin4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/write_kuang"
        android:orientation="horizontal"
        android:padding="@dimen/dp_8">

        <TextView
            android:id="@+id/tvThreeContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/holo_red_light"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tvThreeYuTi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:textColor="@color/aff6600"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/imageThreePlay"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@drawable/review_ting" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@drawable/gray_kuang"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageGood1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/zan_success"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/inPutEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_30"
                android:gravity="center_horizontal"
                android:imeOptions="actionDone"
                android:lineSpacingExtra="@dimen/dp_4"
                android:singleLine="true"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:id="@+id/imageGood2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_30"
                android:background="@drawable/zan_success"
                android:visibility="invisible" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvThreeWordYiSi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_6"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear1"
        android:layout_marginTop="@dimen/dp_8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTwoLiContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="例句:"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tvThreeLiFanYi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:textSize="@dimen/sp_10" />

    </LinearLayout>


</LinearLayout>
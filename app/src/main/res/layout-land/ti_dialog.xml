<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/dp_300"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_kuang_top"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_6">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="消息提示"
            android:textColor="@color/write"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_4"
            android:src="@drawable/finish_close" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_120"
        android:background="@drawable/write_kuang_bottom"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center"
            android:text="该专题尚未解锁，你可以联系你的主管老师解锁该专题"
            android:textColor="@color/a585858"
            android:textSize="@dimen/sp_12" />

        <Button
            android:id="@+id/button"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@drawable/blue_kuang_yuan"
            android:text="确定"
            android:textColor="@color/write" />


    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_6"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvTextView1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="单词"
        android:textColor="@color/a585858"
        android:textSize="@dimen/sp_10" />

    <TextView
        android:id="@+id/tvTextView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="音标"
        android:textColor="@color/a585858"
        android:textSize="@dimen/sp_10" />

    <TextView
        android:id="@+id/tvTextView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="词性"
        android:textColor="@color/a585858"
        android:textSize="@dimen/sp_10" />

    <TextView
        android:id="@+id/tvTextView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="意思"
        android:textColor="@color/a585858"
        android:textSize="@dimen/sp_10" />


    <TextView
        android:id="@+id/tvTextView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="记忆"
        android:textColor="@color/a585858"
        android:textSize="@dimen/sp_10" />

    <TextView
        android:id="@+id/tvTextView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="回忆"
        android:textColor="@color/a585858"
        android:textSize="@dimen/sp_10" />

    <TextView
        android:id="@+id/tvTextView7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="拼写"
        android:textColor="@color/a585858"
        android:textSize="@dimen/sp_10" />

    <TextView
        android:id="@+id/tvTextView8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="错误"
        android:textColor="@color/a585858"
        android:textSize="@dimen/sp_10" />


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_top"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_8">

        <ImageView
            android:id="@+id/imageMainBack"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:src="@drawable/back_w" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_13"
            android:layout_marginLeft="@dimen/dp_8"
            android:src="@drawable/logo300" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:text="恋词英语学习平台"
            android:textColor="@color/ac7d7e8"
            android:textSize="@dimen/sp_10" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_1"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_kuang"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_4"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_4">

            <LinearLayout
                android:id="@+id/signInLinear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewSignIn"
                    android:layout_width="@dimen/dp_14"
                    android:layout_height="@dimen/dp_14"
                    android:src="@drawable/qian_check_in" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:text="签到"
                    android:textColor="@color/ab8c6d6"
                    android:textSize="@dimen/sp_10" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_14"
                    android:layout_height="@dimen/dp_14"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@drawable/qian_check_in" />

                <TextView
                    android:id="@+id/tvAllMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:textColor="@color/ab8c6d6"
                    android:textSize="@dimen/sp_10" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageMainSet"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_18"
            android:src="@drawable/set" />

        <ImageView
            android:id="@+id/userPicHead"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:src="@drawable/head_pic"
            android:layout_marginLeft="@dimen/dp_18" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:clickable="true"
            android:textColor="@color/ab8c6d6"
            android:textSize="@dimen/sp_10" />

        <ImageView
            android:id="@+id/imageMainLoginOut"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_18"
            android:src="@drawable/exit_pic" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
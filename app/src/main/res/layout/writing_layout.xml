<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_4">

        <Button
            android:id="@+id/buttonTi"
            android:layout_width="@dimen/dp_66"
            android:layout_height="@dimen/dp_24"
            android:background="@drawable/blue_kuang_yuan"
            android:text="确认提交"
            android:textColor="@color/write" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_1"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvWritingBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_10" />

    </LinearLayout>

    <LinearLayout
        style="@style/margin4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_no_yuan"
            android:padding="@dimen/dp_1">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/write"
                android:hint="输入标题"
                android:padding="@dimen/dp_4"
                android:paddingLeft="@dimen/dp_6"
                android:textSize="@dimen/sp_10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@drawable/gray_no_yuan"
            android:padding="@dimen/dp_1">

            <com.xin.lv.yang.utils.view.WritingTextView
                android:id="@+id/writingTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:h="1000dp"
                app:w="2000dp" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
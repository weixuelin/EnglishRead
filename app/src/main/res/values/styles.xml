<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/main_top</item>
        <item name="colorPrimaryDark">@color/main_top</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="paddtop12left8">
        <item name="android:paddingTop">@dimen/dp_12</item>
        <item name="android:paddingBottom">@dimen/dp_12</item>
        <item name="android:paddingLeft">@dimen/dp_8</item>
        <item name="android:paddingRight">@dimen/dp_8</item>
    </style>

    <style name="pop_anima">
        <item name="android:windowEnterAnimation">@anim/bottom_to_up</item>
        <item name="android:windowExitAnimation">@anim/up_to_bottom</item>

    </style>

    <style name="paddtop16left8">
        <item name="android:paddingTop">@dimen/dp_16</item>
        <item name="android:paddingBottom">@dimen/dp_16</item>
        <item name="android:paddingLeft">@dimen/dp_8</item>
        <item name="android:paddingRight">@dimen/dp_8</item>

    </style>

    <style name="up_in_down">
        <item name="android:windowEnterAnimation">@anim/top_to_down</item>
        <item name="android:windowExitAnimation">@anim/bottom_to_top</item>
    </style>


    <style name="tab_layout_style" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">true</item>

    </style>


    <style name="tab_layout_style_y" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">true</item>

    </style>

    <style name="tab_layout_style_n" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">true</item>

    </style>


    <style name="paddingtop10left8">
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:paddingLeft">@dimen/dp_8</item>
        <item name="android:paddingRight">@dimen/dp_8</item>

    </style>

    <style name="margin4">
        <item name="android:layout_marginLeft">@dimen/dp_4</item>
        <item name="android:layout_marginTop">@dimen/dp_4</item>
        <item name="android:layout_marginRight">@dimen/dp_4</item>
        <item name="android:layout_marginBottom">@dimen/dp_4</item>
    </style>

    <style name="progress_bar" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_color</item>

    </style>

    <style name="margin8">
        <item name="android:layout_marginLeft">@dimen/dp_8</item>
        <item name="android:layout_marginTop">@dimen/dp_8</item>
        <item name="android:layout_marginRight">@dimen/dp_8</item>
        <item name="android:layout_marginBottom">@dimen/dp_8</item>
    </style>

    <style name="margin10">
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:layout_marginRight">@dimen/dp_10</item>
        <item name="android:layout_marginBottom">@dimen/dp_10</item>
    </style>

    <style name="text_sise">
        <item name="android:textSize">@dimen/sp_10</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
